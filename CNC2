<script>
// ==================== Charts ====================
const weeklyData2 = {
  labels:['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday'],
  datasets:[
    { label:'Green', data:[5,6,7,5.5,6,7.5,6], borderColor:'#4CAF50', backgroundColor:'rgba(76,175,80,0.2)', tension:0.3 },
    { label:'Yellow', data:[1,1.5,1,2,1.2,1,0.8], borderColor:'#FFC107', backgroundColor:'rgba(255,193,7,0.2)', tension:0.3 },
    { label:'Red', data:[0.5,0.8,0.6,0.7,0.5,0.4,0.6], borderColor:'#F44336', backgroundColor:'rgba(244,67,54,0.2)', tension:0.3 }
  ]
};
const lineChart2 = new Chart(document.getElementById('lineChart2').getContext('2d'), {
  type:'line',
  data: weeklyData2,
  options:{
    responsive:true,
    plugins:{ legend:{ position:'top' }, title:{ display:true, text:'Tower Light Hours per Week' } },
    scales:{ y:{ beginAtZero:true, max:24, ticks:{ stepSize:2 }, title:{ display:true, text:'Hours'} }, x:{ title:{ display:true, text:'Day of Week'} } }
  }
});

const pieChart2 = new Chart(document.getElementById('pieChart2').getContext('2d'), {
  type:'pie',
  data:{ labels:['Green','Yellow','Red'], datasets:[{ data:[0,0,0], backgroundColor:['#4CAF50','#FFC107','#F44336'], hoverOffset:4 }]},
  options:{ responsive:true, plugins:{ legend:{ position:'top' }, title:{ display:true, text:'Tower Light Daily Distribution'} } }
});

const barChart2 = new Chart(document.getElementById('barChart2').getContext('2d'), {
  type:'bar',
  data:{ labels:['Green','Yellow','Red'], datasets:[{ label:'Hours', data:[0,0,0], backgroundColor:['#4CAF50','#FFC107','#F44336'] }]},
  options:{ responsive:true, plugins:{ legend:{ display:false }, title:{ display:true, text:'Tower Light Hours by Color'} }, scales:{ y:{ beginAtZero:true, max:24, ticks:{ stepSize:2 }, title:{ display:true, text:'Hours'} }, x:{ title:{ display:true, text:'Color'} } } }
});

const summaryChart2 = new Chart(document.getElementById('summaryChart2').getContext('2d'), {
  type:'doughnut',
  data:{ labels:['Green','Yellow','Red'], datasets:[{ data:[0,0,0], backgroundColor:['#4CAF50','#FFC107','#F44336'], borderWidth:0 }]},
  options:{ responsive:true, cutout:'70%', plugins:{ legend:{ display:false }, tooltip:{ enabled:false } } }
});

// ==================== Update functions ====================
function updateSummaryWidget2(green,yellow,red){
  const total = green+yellow+red;
  const percent = total>0 ? ((green/total)*100).toFixed(1) : 0;
  summaryChart2.data.datasets[0].data = [green,yellow,red];
  summaryChart2.update();
  document.getElementById('summaryText2').innerHTML = 
    `<div style="font-size:20px;font-weight:bold; margin-bottom:5px;">${percent}%</div>
     <div>● <span style="color:#4CAF50">Green</span>: ${green} hours</div>
     <div>● <span style="color:#FFC107">Yellow</span>: ${yellow} hours</div>
     <div>● <span style="color:#F44336">Red</span>: ${red} hours</div>`;
}

function updateDailyCharts2(dailyData){
  pieChart2.data.datasets[0].data = [dailyData.green,dailyData.yellow,dailyData.red];
  pieChart2.update();
  barChart2.data.datasets[0].data = [dailyData.green,dailyData.yellow,dailyData.red];
  barChart2.update();
  updateSummaryWidget2(dailyData.green,dailyData.yellow,dailyData.red);
}

function updateTowerStatus2(color){
  const statusCircle = document.getElementById('towerStatus2');
  if(color==='green') statusCircle.style.background='#4CAF50';
  else if(color==='yellow') statusCircle.style.background='#FFC107';
  else if(color==='red') statusCircle.style.background='#F44336';
}

// ==================== Real-time & Historical ====================
let isRealTime2 = true;
let realTimeInterval2;

function fetchDataAndUpdate2() {
  if(isRealTime2){
    const currentData = { green: getRandomInt2(5,8), yellow: getRandomInt2(1,3), red: getRandomInt2(0,2) };
    updateDailyCharts2(currentData);
    updateTowerStatus2(getRandomColor2());
  }
}

const dateInput2 = document.getElementById('dateSelect2');
dateInput2.addEventListener('change', (e)=>{
  const selectedDate = e.target.value;
  if(selectedDate){
    isRealTime2 = false;
    const historicalData = { green:6, yellow:3, red:1 };
    updateDailyCharts2(historicalData);
    updateTowerStatus2('green');
  } else {
    isRealTime2 = true;
  }
});

realTimeInterval2 = setInterval(fetchDataAndUpdate2, 5000);

// ==================== Initial load ====================
updateDailyCharts2({ green:6, yellow:4, red:2 });
updateTowerStatus2('green');

// Utility
function getRandomInt2(min,max){ return Math.floor(Math.random()*(max-min+1))+min; }
function getRandomColor2(){
  const colors = ['green','yellow','red'];
  return colors[Math.floor(Math.random()*colors.length)];
}
</script>
